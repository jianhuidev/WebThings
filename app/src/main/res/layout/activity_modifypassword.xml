<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/contactPhone_modify"
        android:layout_width="290dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="82dp"
        android:background="@null"
        android:drawableBottom="@drawable/editbottom_selector"
        android:drawableLeft="@drawable/phone_icon"
        android:drawablePadding="15dp"
        android:hint="手机号"
        android:paddingLeft="15dp"
        android:selectAllOnFocus="true" />


    <EditText
        android:id="@+id/email_modify"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:background="@null"
        android:drawableBottom="@drawable/editbottom_selector"
        android:drawableLeft="@drawable/dl_icon_password"
        android:drawablePadding="15dp"
        android:hint="邮箱"
        android:paddingLeft="15dp"
        android:selectAllOnFocus="true" />

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/verifyCode_modify"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_marginTop="14dp"
            android:background="@null"
            android:drawableBottom="@drawable/editbottom_selector"
            android:drawableLeft="@drawable/dl_icon_verification_code"
            android:drawablePadding="15dp"
            android:hint="验证码"
            android:paddingLeft="15dp"
            android:selectAllOnFocus="true"
            android:textColorHint="@color/gray" />

        <TextView
            android:id="@+id/verifyCode_text"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="@dimen/mp_5"
            android:paddingRight="@dimen/mp_5"
            android:background="@drawable/verify_shape1"
            android:layout_toRightOf="@+id/verifyCode_modify"/>

        <!--<ProgressBar-->
            <!--android:id="@+id/progressbar"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--android:layout_toRightOf="@id/verifyCode_edit" />-->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/newPassword_modify"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:background="@null"
            android:drawableBottom="@drawable/editbottom_selector"
            android:drawableLeft="@drawable/dl_icon_password"
            android:drawablePadding="15dp"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:selectAllOnFocus="true" />

        <EditText
            android:id="@+id/affirm_Password"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:background="@null"
            android:drawableBottom="@drawable/editbottom_selector"
            android:drawableLeft="@drawable/dl_icon_password"
            android:drawablePadding="15dp"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:selectAllOnFocus="true" />

        <Button
            android:id="@+id/modify_sure_btn"
            android:layout_width="241dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_btn_selector"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>